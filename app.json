{
  "name": "django-boilerplate",
  "description": "A Django boilerplate project",
  "keywords": ["python", "django"],
  "env": {
    "DEBUG": {
      "description": "Django DEBUG settings",
      "value": "False"
    },
    "ENVIRONMENT": {
      "description": "Current environment",
      "value": "production"
    },
    "DJANGO_SETTINGS_MODULE": {
      "description": "Django settings Python import path",
      "value": "settings"
    },
    "SECRET_KEY": {
      "description": "Django SECRET_KEY setting",
      "generator": "secret"
    },
    "ALLOWED_HOSTS": {
      "description": "Django ALLOWED_HOSTS setting, e.g.: <app-name>.herokuapp.com"
    },
    "FRONTEND_APP_URL": {
      "description": "Frontend APP URL, e.g.: https://<app-name>.herokuapp.com",
      "value": ""
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    },
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "options": {
        "version": "13"
      },
      "as": "DATABASE"
    },
    {
      "plan": "heroku-redis:hobby-dev",
      "options": {
        "version": "6"
      },
      "as": "REDIS"
    },
    {
      "plan": "papertrail:choklad"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
